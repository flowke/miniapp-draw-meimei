<wxs src="./mark.wxs" module="tool"></wxs>

<view class="container">
  <block wx:if="{{hasAuthLocation}}">
    <view
      class="info_panel"
      scroll-y="{{true}}"
      animation="{{panelAniData}}"
    >
      <!-- 关闭面板的叉叉 -->
      <view class="cancel_cross" bind:tap="closePanel">
        <image
          src="./img/cross.png"
        />
      </view>

      <view class="header_img">
        <image
          src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcScgASmjdAgex5npjjcNA-4psF3fxQD7wZATFFqK_cJt5uhss87"
          class=""
        />
      </view>

      <!-- 内容 -->
      <view class="content_wrap">
        <view class="title">
          <text>国贸</text>
        </view>

        <view class="address">
          <text>范德萨发放</text>
        </view>

        <view class="add_time">
          添加事件
        </view>

        <scroll-view
          class="incident_list"
          scroll-y="{{true}}"
        >
          <view class="desc">
            <text class="time">5月15日</text>
            <input value="到了附近的登录方法"/>
          </view>
          <view class="desc">
            <text class="time">5月15日</text>
            <input value="到了附近的登录方法"/>
          </view>
          <view class="desc">
            <text class="time">5月15日</text>
            <input value="到了附近的登录方法"/>
          </view>
          <view class="desc">
            <text class="time">5月15日</text>
            <input value="到了附近的登录方法"/>
          </view>
          <view class="desc">
            <text class="time">5月15日</text>
            <input value="到了附近的登录方法"/>
          </view>
        </scroll-view>
      </view>

      <!-- 添加事件面板 -->
      <view class="incident_panel">
        <picker mode="date"  start="2015-09-01" end="2017-09-01" >
          <view class="field">
            <text class="field_name">时间:</text>
            <text>5月15日</text>
          </view>
       </picker>
       <view class="field">
          <text class="field_name">片语:</text>
          <input value="对对对"/>
       </view>
      </view>

    </view>
    <view style="height:100%">
      <map
        id="map"
        class="map"
        show-location="{{true}}"
        bindmarkertap="tapmarker"
        markers="{{tool.createMarkers(markerData)}}"
        bindtap="tapmarker"

      >
        <!-- 回到当前定位 -->
        <cover-view
          class="locate_icon_wrap"
          bind:tap="toMyLocation"
        >
          <cover-image class="icon_size" src="./img/locate.png"/>
        </cover-view>

        <!-- 选择一个位置 -->
        <cover-view
          class="mark_icon_wrap"
          bind:tap="chooseLocation"
        >
          <cover-image class="icon_size" src="./img/flag.png"/>
        </cover-view>

      </map>
    </view>



  </block>
  <block wx:if="{{!hasAuthLocation}}">
    <auth-page
      scope="userLocation"
      bind:getAuth="getAuth"
    />
  </block>

</view>
