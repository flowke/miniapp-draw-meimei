.container{
  height: 100%;
  position: relative;
  overflow: hidden;
}

.map{
  width: 100%;
  height: 100%;
}


.locate_icon_wrap{
  position: absolute;
  left: 30rpx;
  bottom: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
  background-color: #FFFFFF;
  border-radius: 50%;
  box-shadow: 0 5rpx 5rpx rgba(0, 0, 0, 0.52);
}
.icon_size{
  width: 75%;
  height: 75%;
}
/* 添加地点信息 */
.mark_icon_wrap{
  position: absolute;
  right: 30rpx;
  bottom: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
  background-color: #FFFFFF;
  border-radius: 50%;
  box-shadow: 0 5rpx 5rpx rgba(0, 0, 0, 0.52);
}

/* mark 的详情信息面板 */
.info_panel{
  position: relative;
  width: 100%;
  height: 75%;
}
.info_panel .cancel_cross{
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  width: 50rpx;
  height: 50rpx;
}
.info_panel .cancel_cross image{
  width: 100%;
  height: 100%;
}

.info_panel .header_img{
  width: 100%;
  height: 100rpx;
}
.info_panel .header_img image{
  width: 100%;
  text-align: center;
}
