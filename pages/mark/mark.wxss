.container{
  height: 100%;
  position: relative;
  overflow: hidden;
}

.map{
  width: 100%;
  height: 100%;
}


.locate_icon_wrap{
  position: absolute;
  left: 30rpx;
  bottom: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
  background-color: #FFFFFF;
  border-radius: 50%;
  box-shadow: 0 5rpx 5rpx rgba(0, 0, 0, 0.52);
}
.icon_size{
  width: 75%;
  height: 75%;
}
/* 添加地点信息 */
.mark_icon_wrap{
  position: absolute;
  right: 30rpx;
  bottom: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
  background-color: #FFFFFF;
  border-radius: 50%;
  box-shadow: 0 5rpx 5rpx rgba(0, 0, 0, 0.52);
}

/* mark 的详情信息面板 */
.info_panel{
  position: relative;
  width: 100%;
  height: 75%;
}
.info_panel .cancel_cross{
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  width: 50rpx;
  height: 50rpx;
}
.info_panel .cancel_cross image{
  width: 100%;
  height: 100%;
}

.info_panel .header_img{
  width: 100%;
  height: 320rpx;
  overflow: hidden;
}
.info_panel .header_img image{
  width: 100%;
  text-align: center;
}

.info_panel .content_wrap{
  padding: 0 40rpx;
  padding-top: 40rpx;
}
.info_panel .title{
  color: #353535;
}
.info_panel .address{
  color: #b2b2b2;
  font-size: 9pt;
}
.info_panel .add_time{
  display: inline-block;
  margin: 10rpx 0;
  padding: 5rpx 10rpx;
  color: #E6804E;
  font-size: 7pt;
  border-radius: 20rpx;
  border: 1px solid #E6804E;
}
.info_panel .incident_list{
  overflow: hidden;
}
.info_panel .desc{
  margin-top: 28rpx;
  color: #7A7A7A;
  font-size: 11pt;
}
.info_panel .desc .time{
  color: #EB5252;
  font-size: 9pt;
}
