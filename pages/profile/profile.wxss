.container{
  height: 100%;
  /* background-color: red */
}

.profile_card_box{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.profile_card_box .avatar_wrap{
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 5rpx 20rpx 0 rgba(0,0,0, 0.16);
  margin-top: 80rpx;
  margin-bottom: 40rpx;
}
.profile_card_box .avatar{
  width: 300rpx;
  height: 300rpx;
}
.profile_card_box .title{
  font-size: 18pt;
  font-weight: bold;
  margin-bottom: 6rpx;
}
.profile_card_box .desc{
  font-size: 10pt;
}

.done_tags_box{
  margin: 30rpx;
  margin-right: 20rpx;
  display: flex;
  /* justify-content: space-between; */
  flex-wrap: wrap;
}
.done_tags_box .tag{
  margin-right: 16rpx;
  margin-bottom: 20rpx;
  padding: 0 26rpx;
  border: 1rpx solid #C9C8C8;
  border-radius: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 12pt;
  color: #576269;
}

/* 右下角添加按钮 */
.add_button{
  position: fixed;
  right: 30rpx;
  bottom: 50rpx;
  width: 44pt;
  height: 44pt;
  background-color: #4B9EFD;
  border-radius: 50%;
  font-size: 26pt;
  color: #fff;
  box-shadow: 5rpx 6rpx 14rpx 1rpx rgba(74, 157, 252, 0.53);
}
.add_button navigator{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}


.auth_wrap{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #F5FBFE
}
